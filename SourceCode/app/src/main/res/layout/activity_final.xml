<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".activity.ImageResultActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0A001C">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/home"
            android:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/med"
            android:text="Image Saved"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@id/btns"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp">


        <ImageView
            android:id="@+id/ivResult"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/success"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp" />


        <TextView
            android:id="@+id/success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivResult"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/med"
            android:text="Image Saved Successfully."
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/ad"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="7.5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_white"
            android:fontFamily="@font/bold"
            android:text="Continue Editing"
            android:textColor="@color/bgColor" />


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/native_large_shimmer" />

    </RelativeLayout>


</RelativeLayout>